<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= data.name %> - Ad Image</title>

  <!-- Google Fonts + Bootstrap -->
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&family=Open+Sans&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --porter-blue: #0052CC;
      --light-grey: #F5F7FA;
      --charcoal: #2E2E2E;
      --alert-red: #dc3545;
    }

    body {
      background: var(--light-grey) no-repeat center center fixed;
      background-size: cover;
      min-height: 100vh;
      margin: 0;
      padding: 0;
      font-family: 'Open Sans', sans-serif;
      display: flex;
      flex-direction: column;
    }

    /* Header Section */
    .main-header {
      width: 100%;
      background-color: var(--porter-blue);
      color: white;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 2rem;
      font-family: 'Montserrat', sans-serif;
      font-weight: 600;
      font-size: 1.5rem;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .back-btn {
      background-color: var(--alert-red);
      color: white;
      border: none;
      padding: 8px 14px;
      font-weight: 600;
      border-radius: 6px;
      transition: 0.3s;
    }

    .back-btn:hover {
      background-color: #c82333;
    }

    /* Main Content */
    .content-box {
      flex-grow: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 2rem;
    }

    .formdes {
      background-color: white;
      padding: 2.5rem;
      border-radius: 16px;
      box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);
      max-width: 700px;
      width: 100%;
      text-align: center;
    }

    h1 {
      font-family: 'Montserrat', sans-serif;
      font-weight: 600;
      font-size: 2rem;
      margin-bottom: 0.5rem;
      color: var(--charcoal);
    }

    h2 {
      font-size: 1.25rem;
      font-weight: 400;
      margin-bottom: 2rem;
      color: #444;
    }

    .image-container {
      width: 100%;
      height: 320px;
      background-color: #f0f0f0;
      border-radius: 10px;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }

    .image-container img {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
    }

    /* Footer */
    footer {
      text-align: center;
      padding: 1rem;
      font-size: 0.9rem;
      color: #666;
      background: white;
      border-top: 1px solid #ddd;
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <header class="main-header">
    <span>Hauller Admin</span>
    <button class="back-btn" onclick="window.history.back()">← Back</button>
  </header>

  <!-- MAIN CONTENT -->
  <div class="content-box">
    <form class="formdes">
      <h1><%= data.name %></h1>
      <h2><%= data.description %></h2>

      <div class="image-container">
        <% var imageurl = "/media/"+data._id+"."+data.image %>
        <img src="<%= data.image %>" alt="<%= data.name %>">
      </div>
    </form>
  </div>

  <!-- FOOTER -->
  <footer>
    &copy; <%= new Date().getFullYear() %> Hauller Admin – Built by Team 40 | SIT725
  </footer>

</body>
</html>
